{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "testsystemadmin",
            "metadata": {
                "description": "The name of the administrator account of the new VM and domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the administrator account of the new VM and domain"
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "TESTSYS",
            "metadata": {
                "description": "The FQDN of the Active Directory Domain to be created"
            }
        },
        "dnsPrefix": {
            "type": "string",
            "defaultValue": "t1s",
            "metadata": {
                "description": "The DNS prefix for the public IP address used by the Load Balancer"
            }
        },
      "_artifactsLocation": {
        "type": "string",
        "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
        },
        "defaultValue": "https://raw.githubusercontent.com/bpnkul/ARMTemplates/master/active-directory-upgrade-environment-setup"
      },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "virtualNetworkName": "dcVNET",
        "virtualNetworkAddressRange": "10.0.0.0/16",
        "subnetName": "testSubnet",
        "subnetRange": "10.0.0.0/24",

        "adNicName": "testNic",
        "adNicIPAddress": "10.0.0.4",
        "adVMName": "testVM",
        "publicIPAddressName": "testPublicIP"    
    },
    "resources": [
         {
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "name": "VNet",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },
                    "virtualNetworkAddressRange": {
                        "value": "[variables('virtualNetworkAddressRange')]"
                    },
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },
                    "subnetRange": {
                        "value": "[variables('subnetRange')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "name": "VM2008",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/nestedtemplates/vm.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },                                         
                    "dnsPrefix": {
                        "value": "[parameters('dnsPrefix')]"
                    },                
                    "vmNicName": {
                        "value": "[variables('adNicName')]"
                    },               
                    "subnetRange": {
                        "value": "[variables('subnetRange')]"
                    },               
                    "vmNicIPAddress": {
                        "value": "[variables('adNicIPAddress')]"
                    },               
                    "vmName": {
                        "value": "[variables('adVMName')]"
                    },       
                    "publicIPAddressName": {
                        "value": "[variables('publicIPAddressName')]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },                           
                    "subnetName": {
                        "value": "[variables('subnetName')]"
                    },                          
                    "location": {
                        "value": "[parameters('location')]"
                    }                   
                },
                "dependsOn": [
                    "Microsoft.Resources/deployments/VNet"
                  ]
            }
        }       
    ]
}
